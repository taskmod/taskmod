<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </div>
  <div class="field">
    <%= f.label :status %><br>
    <%= f.select :status, (["Pendente", "Em Andamento", "Concluido"]) %>
  </div>
  <div class="field">
    <%= f.label :category_id %><br>
    <%= f.select :category_id, @categories.collect { |c| [ c.name, c.id ] } %>
  </div>
  <div class="field">
    <%= f.label :partner_id %><br>
    <%= f.select :partner_id, @partners.collect { |p| [ p.name, p.id ] } %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
