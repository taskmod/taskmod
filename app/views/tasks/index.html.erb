
<div id="page-menu">
	<div class="submenu">	

	<ul>
   <li class="about1"><%= link_to 'Nova Atividade', new_task_path %></li>
   <li class="about1"><%= link_to 'Novo Parceiro', new_partner_path %></li>
   <li class="about1"><%= link_to 'Nova Categoria', new_category_path %></li>
	</ul>

	</div>
</div>

<%= form_tag tasks_path, :method => 'get' do%>

	<div class="search">
		<p>	
		<%= text_field_tag :search, params[:search] %>
		<%=submit_tag "Search"%>
		</p>	
	</div>

<% end %>

<table>
  <thead>
  	
    <tr>
      <th>Descrição</th>
      <th>Status</th>
      <th>Categoria</th>
      <th>Parceiro</th>
      <th>Data</th>
      <th colspan="3"></th>
    </tr>

  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.category.name %></td>
        <td><%= task.partner.name %></td>
        <td><%= task.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Mostrar', task %></td>
        <td><%= link_to 'Editar', edit_task_path(task) %></td>
        <td><%= link_to 'Excluir', task, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' } %></td>
      </tr>
    <% end %>
	</tbody>
</table>

