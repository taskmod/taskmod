<h1>Listing tasks</h1>

<p>
   <%= link_to 'Nova Atividade', new_task_path %> |
   <%= link_to 'Novo Parceiro', new_partner_path %> |
   <%= link_to 'Nova Categoria', new_category_path %>
</p>
<%= form_tag tasks_path, :method => 'get' do%>
	<p>
		<%= text_field_tag :search, params[:search] %>
		<%=submit_tag "Search"%>
	</p>
<% end %>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Status</th>
      <th>Categoria</th>
      <th>Parceiro</th>
      <th>Solicitado em</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.description %></td>
        <td><%= task.status %></td>
        <td><%= task.category.name %></td>
        <td><%= task.partner.name %></td>
        <td><%= task.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= link_to 'Mostrar', task %></td>
        <td><%= link_to 'Editar', edit_task_path(task) %></td>
        <td><%= link_to 'Excluir', task, method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' } %></td>
      </tr>
    <% end %>
</tbody>

</table>

<br>

<%= link_to 'Nova Atividade', new_task_path %>
